<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.4.xsd">

    <changeSet id="create_usertable" author="Damilare">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="personnel_credentials"/>
            </not>
        </preConditions>
        <createTable tableName="personnel_credentials">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="username" type="VARCHAR(255)"/>
            <column name="password" type="VARCHAR(255)"/>
            <column name="role" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>


    <changeSet id="add_auto_increment_id" author="Damilare">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="personnel_credentials"/>
            </not>
        </preConditions>
        <modifyDataType tableName="personnel_credentials" columnName="id" newDataType="BIGINT AUTO_INCREMENT"/>
    </changeSet>


    <changeSet id="create_invoice_details_table" author="Damilare">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="invoice_details_table"/>
            </not>
        </preConditions>
        <createTable tableName="invoice_details_table">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>

            <column name="invoice_no" type="VARCHAR(500)" >
                <constraints nullable="false"/>
            </column>
            <column name="vendor_name" type="VARCHAR(500)" >
                <constraints nullable="false"/>
            </column>
            <column name="submitted_name" type="VARCHAR(500)" >
                <constraints nullable="false"/>
            </column>
            <column name="invoice_date" type="DATE" >
                <constraints nullable="false"/>
            </column>
            <column name="item_description" type="VARCHAR(500)" >
                <constraints nullable="false"/>
            </column>
            <column name="unit_price" type="DOUBLE(100,2)" >
                <constraints nullable="false"/>
            </column>
            <column name="quantity" type="INT(255)" >
                <constraints nullable="false"/>
            </column>
            <column name="total_amount" type="DOUBLE(100,2)" >
                <constraints nullable="false"/>
            </column>
            <column name="approval_status" type="VARCHAR(500)" >
                <constraints nullable="false"/>
            </column>

        </createTable>

        <addForeignKeyConstraint
                baseTableName="invoice_details_table"
                baseColumnNames="id"
                constraintName="joining_invoice_details_table"
                referencedTableName="personnel_credentials"
                referencedColumnNames="id"/>
    </changeSet>

    <changeSet id="create_invoice_rules_table" author="Damilare">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="invoice_rules_table"/>
            </not>
        </preConditions>
        <createTable tableName="invoice_rules_table">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="min_amount" type="DOUBLE(100,2)">

            </column>
            <column name="max_amount" type="DOUBLE(100,2)">

            </column>
            <column name="block_future_dates" type="BOOL">

            </column>
            <column name="max_days_old" type="INT(255)">

            </column>
        </createTable>
    </changeSet>

    <changeSet id="drop_old_fk" author="Damilare">
        <dropForeignKeyConstraint
                baseTableName="invoice_details_table"
                constraintName="joining_invoice_details_table"/>
    </changeSet>

    <changeSet id="add_personnel_id_column" author="Damilare">
        <addColumn tableName="invoice_details_table">
            <column name="personnel_id" type="BIGINT"/>
        </addColumn>
    </changeSet>

    <changeSet id="add_correct_fk" author="Damilare">
        <addForeignKeyConstraint
                baseTableName="invoice_details_table"
                baseColumnNames="personnel_id"
                constraintName="fk_invoice_personnel"
                referencedTableName="personnel_credentials"
                referencedColumnNames="id"
                onDelete="SET NULL"/>
    </changeSet>

    <changeSet id="reset_invoice_id_sequence" author="yourname">
        <sql>ALTER TABLE invoice_details_table AUTO_INCREMENT = 1;</sql>
    </changeSet>


</databaseChangeLog>