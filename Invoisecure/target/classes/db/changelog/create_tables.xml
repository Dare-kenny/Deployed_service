<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.4.xsd">

    <!-- Create personnel_credentials table -->
    <changeSet id="create_usertable" author="Damilare">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="personnel_credentials"/>
            </not>
        </preConditions>
        <createTable tableName="personnel_credentials">
            <column name="id" type="BIGSERIAL">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="username" type="VARCHAR(255)"/>
            <column name="password" type="VARCHAR(255)"/>
            <column name="role" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>

    <!-- Create invoice_details_table -->
    <changeSet id="create_invoice_details_table" author="Damilare">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="invoice_details_table"/>
            </not>
        </preConditions>
        <createTable tableName="invoice_details_table">
            <column name="id" type="BIGSERIAL">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="invoice_no" type="VARCHAR(500)">
                <constraints nullable="false"/>
            </column>
            <column name="vendor_name" type="VARCHAR(500)">
                <constraints nullable="false"/>
            </column>
            <column name="submitted_name" type="VARCHAR(500)">
                <constraints nullable="false"/>
            </column>
            <column name="invoice_date" type="DATE">
                <constraints nullable="false"/>
            </column>
            <column name="item_description" type="VARCHAR(500)">
                <constraints nullable="false"/>
            </column>
            <column name="unit_price" type="NUMERIC(100,2)">
                <constraints nullable="false"/>
            </column>
            <column name="quantity" type="INTEGER">
                <constraints nullable="false"/>
            </column>
            <column name="total_amount" type="NUMERIC(100,2)">
                <constraints nullable="false"/>
            </column>
            <column name="approval_status" type="VARCHAR(500)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <!-- Create invoice_rules_table -->
    <changeSet id="create_invoice_rules_table" author="Damilare">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="invoice_rules_table"/>
            </not>
        </preConditions>
        <createTable tableName="invoice_rules_table">
            <column name="id" type="BIGSERIAL">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="min_amount" type="NUMERIC(100,2)"/>
            <column name="max_amount" type="NUMERIC(100,2)"/>
            <column name="block_future_dates" type="BOOLEAN"/>
            <column name="max_days_old" type="INTEGER"/>
        </createTable>
    </changeSet>

    <!-- Drop old invalid foreign key if it exists -->
    <changeSet id="drop_old_fk" author="Damilare">
        <preConditions onFail="MARK_RAN">
            <foreignKeyConstraintExists 
                foreignKeyName="joining_invoice_details_table"/>
        </preConditions>
        <dropForeignKeyConstraint
                baseTableName="invoice_details_table"
                constraintName="joining_invoice_details_table"/>
    </changeSet>

    <!-- Add personnel_id column -->
    <changeSet id="add_personnel_id_column" author="Damilare">
        <addColumn tableName="invoice_details_table">
            <column name="personnel_id" type="BIGINT"/>
        </addColumn>
    </changeSet>

    <!-- Add correct foreign key constraint -->
    <changeSet id="add_correct_fk" author="Damilare">
        <addForeignKeyConstraint
                baseTableName="invoice_details_table"
                baseColumnNames="personnel_id"
                constraintName="fk_invoice_personnel"
                referencedTableName="personnel_credentials"
                referencedColumnNames="id"
                onDelete="SET NULL"/>
    </changeSet>

    <changeSet id="reset_personnel_id_sequence" author="Damilare">
        <sql>ALTER SEQUENCE personnel_credentials_id_seq RESTART WITH 1;</sql>
    </changeSet>

</databaseChangeLog>
